<%= form_for(task) do |f| %>
  
  <%#エラー処理 %>
  <% if task.errors.any? %>
    <div id='error_explanation'>
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  
  <%= f.label :status, 'ステータス' %>
  <%= f.select :status, [ "未対応" , "対応中" , "完了" , "保留" , "棄却"  ] %>
    
  <%= f.submit '登録' %>
<% end %>